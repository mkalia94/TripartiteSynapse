#!/bin/bash
declare -A ECSsizes
ECSsizes=( ["-s"]="SmallECS"
#           ["-m"]="MedECS"
            ["-b"]="BigECS")

declare -A Experiments
Experiments=(   #["Baseline"]="--pumpScaleAst 1.8 --pumpScaleNeuron 1.8 --perc 0.0 --tstart 20 --tend 35 --tfinal 80" 
	         #["HyperNKA1_7x"]="--pumpScaleAst 3 --pumpScaleNeuron 3 --tstart 20 --tend 35 --perc 0.0 --tfinal 80"
		 ["HyperNKA2x"]="--pumpScaleAst 2 --pumpScaleNeuron 2 --tstart 20 --tend 35 --perc 0.0 --tfinal 80")
                 #["HyperNKA2x"]="--pumpScaleAst 3.6 --pumpScaleNeuron 3.6 --tstart 20 --tend 35  --tfinal 80"
		 #["pED"]="--tstart 20 --tend 45 --tfinal 80 --perc 0.5"
		 #["NavBlock"]="--tstart 20 --tend 45 --tfinal 135  --block {\"INaG\":[80,100]}")
for name_ in "${!Experiments[@]}"; do
  for size_ in "${!ECSsizes[@]}"; do
    python set_up.py \
    --name "${ECSsizes[$size_]}" \
    $size_ \
    ${Experiments[$name_]} \
    --solve \
    --saveloc "Section1/$name_/${ECSsizes[$size_]}" \
    --plotall
  done; 
done